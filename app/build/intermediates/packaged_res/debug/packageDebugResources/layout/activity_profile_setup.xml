<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Arrow + Title Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:tint="#EC407A"
                android:layout_marginEnd="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile Setup"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#EC407A"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Main Profile Photo -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Profile Picture"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to add profile photo"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Additional Pictures Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pictures (Minimum 6)"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:id="@+id/gridPictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center">

            <!-- 6 picture frames -->
            <ImageView
                android:id="@+id/img1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/img4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/img5"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/img6"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:clickable="true"
                android:focusable="true"/>
        </GridLayout>

        <!-- Name -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginBottom="8dp"/>

        <!-- Age -->
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <!-- Gender Identity -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender Identity"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <RadioButton android:id="@+id/rbMale" android:text="He/Him"/>
            <RadioButton android:id="@+id/rbFemale" android:text="She/Her" android:layout_marginStart="16dp"/>
            <RadioButton android:id="@+id/rbThey" android:text="They/Them" android:layout_marginStart="16dp"/>
        </RadioGroup>

        <!-- Sexual Orientation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sexual Orientation"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgOrientation"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton android:id="@+id/rbStraight" android:text="Straight"/>
            <RadioButton android:id="@+id/rbGay" android:text="Gay" android:layout_marginTop="8dp"/>
            <RadioButton android:id="@+id/rbLesbian" android:text="Lesbian" android:layout_marginTop="8dp"/>
            <RadioButton android:id="@+id/rbBisexual" android:text="Bisexual" android:layout_marginTop="8dp"/>
            <RadioButton android:id="@+id/rbAsexual" android:text="Asexual" android:layout_marginTop="8dp"/>
            <RadioButton android:id="@+id/rbOther" android:text="Other" android:layout_marginTop="8dp"/>
        </RadioGroup>

        <!-- Location -->
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginBottom="16dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveCore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save  &amp;  Continue"
            android:backgroundTint="#F48FB1"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
