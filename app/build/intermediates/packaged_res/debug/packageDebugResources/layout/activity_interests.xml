<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Arrow + Title Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:tint="#EC407A"
                android:layout_marginEnd="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Interests"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#EC407A"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bio Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Adventurous, foodie, love hiking and books."
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <!-- Prompts -->
        <EditText
            android:id="@+id/etLifeGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A life goal of mine is..."
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etWeekend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="I usually spend my weekends..."
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="My friends would describe me as..."
            android:layout_marginBottom="16dp"/>

        <!-- Looking For Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking For"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/lookingForOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"/>

            <CheckBox
                android:id="@+id/cbShortTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Short-term"
                android:layout_marginStart="16dp"/>

            <CheckBox
                android:id="@+id/cbLongTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long-term"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Interests & Hobbies -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interests  &amp;  Hobbies"
            android:textAlignment="center"
            android:textColor="#EC407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- FlexboxLayout -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flowHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="4dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="flex_start">

            <!-- ToggleButtons -->
            <ToggleButton android:id="@+id/tbReading" android:textOn="Reading" android:textOff="Reading"/>
            <ToggleButton android:id="@+id/tbTravel" android:textOn="Travel" android:textOff="Travel"/>
            <ToggleButton android:id="@+id/tbMusic" android:textOn="Music" android:textOff="Music"/>
            <ToggleButton android:id="@+id/tbMovies" android:textOn="Movies" android:textOff="Movies"/>
            <ToggleButton android:id="@+id/tbHiking" android:textOn="Hiking" android:textOff="Hiking"/>
            <ToggleButton android:id="@+id/tbCooking" android:textOn="Cooking" android:textOff="Cooking"/>
            <ToggleButton android:id="@+id/tbRoadTrips" android:textOn="Road trips" android:textOff="Road trips"/>
            <ToggleButton android:id="@+id/tbSports" android:textOn="Sports" android:textOff="Sports"/>
            <ToggleButton android:id="@+id/tbArt" android:textOn="Art" android:textOff="Art"/>
            <ToggleButton android:id="@+id/tbPhotography" android:textOn="Photography" android:textOff="Photography"/>
            <ToggleButton android:id="@+id/tbDancing" android:textOn="Dancing" android:textOff="Dancing"/>
            <ToggleButton android:id="@+id/tbGaming" android:textOn="Gaming" android:textOff="Gaming"/>
            <ToggleButton android:id="@+id/tbWriting" android:textOn="Writing" android:textOff="Writing"/>
            <ToggleButton android:id="@+id/tbVolunteering" android:textOn="Volunteering" android:textOff="Volunteering"/>
            <ToggleButton android:id="@+id/tbShopping" android:textOn="Shopping" android:textOff="Shopping"/>
        </com.google.android.flexbox.FlexboxLayout>

        <!-- Education + Occupation -->
        <EditText
            android:id="@+id/etEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Education / Occupation"
            android:layout_marginBottom="16dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save  &amp; Continue"
            android:backgroundTint="#F48FB1"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
