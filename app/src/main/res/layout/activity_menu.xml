<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation_menu"
        android:paddingBottom="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Header -->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:src="@drawable/ic_profile"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="4dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profileName"
                        android:text="Your Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/editProfile"
                        android:text="Edit Profile"
                        android:textSize="14sp"
                        android:textColor="#FF4081"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Menu Items -->
            <LinearLayout
                android:id="@+id/optionMatches"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_matches"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Matches"
                    style="@style/MenuRowText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionMessages"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_chat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Messages"
                    style="@style/MenuRowText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionNotifications"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_notifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Notifications"
                    style="@style/MenuRowText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionLocation"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_my_location"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Location"
                    style="@style/MenuRowText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionSettings"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="App Settings"
                    style="@style/MenuRowText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionLogout"
                style="@style/MenuRowStyle"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:src="@drawable/ic_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:text="Logout"
                    style="@style/MenuRowText"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu"
        android:background="#FFFFFF"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"/>
</RelativeLayout>
